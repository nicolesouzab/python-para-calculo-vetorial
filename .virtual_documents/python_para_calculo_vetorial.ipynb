def eh_primo(x):
    if x < 2:
        return False  
    for i in range(2, int(x**0.5) + 1):
        if x % i == 0:
            return False  
    return True  

numero = int(input("Digite um número inteiro: "))

if eh_primo(numero):
    print(f"O número {numero} é um número primo.")
else:
    print(f"O número {numero} não é um número primo.")






