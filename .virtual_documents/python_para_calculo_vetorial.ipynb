import plotly.express as px
import pandas as pd





x = np.linspace(-5, 5, 200)

# funcao
y = x**2 - 5*x + 3

# criacao do dataframe
df = pd.DataFrame({'x': x, 'y': y})

# plotando o grafico
fig = px.line(df, x='x', y='y', title= 'Gráfico de y = x² - 5x + 3')

# exibindo o grafico
fig.show()





